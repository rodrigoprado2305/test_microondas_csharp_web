@model BennerMicroOndas.Models.ProgramaAquecimento

@{
    ViewData["Title"] = "Cadastro de Programa de Aquecimento";
}

<h1>Cadastro de Programa de Aquecimento</h1>

<form id="form" asp-action="SalvarPrograma" method="post">
    <div class="form-group">
        <label asp-for="Nome" class="control-label">Nome:</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
        @if (Model != null && !string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <span class="text-danger">@Model.ErrorMessage</span> <!-- Exibe a mensagem de erro -->
        }
    </div>
    <div class="form-group">
        <label asp-for="Alimento" class="control-label">Alimento:</label>
        <input asp-for="Alimento" class="form-control" />
        <span asp-validation-for="Alimento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tempo" class="control-label">Tempo (segundos):</label>
        <input asp-for="Tempo" class="form-control" />
        <span asp-validation-for="Tempo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Potencia" class="control-label">Potência (1-10):</label>
        <input asp-for="Potencia" class="form-control" />
        <span asp-validation-for="Potencia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Instrucoes" class="control-label">Instruções:</label>
        <textarea asp-for="Instrucoes" class="form-control"></textarea>
        <span asp-validation-for="Instrucoes" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>




<script src="/js/cadastrarProgramas.js"></script>
